<!DOCTYPE html>
<html lang="en">
<head>

  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/foundation.css">
  <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/css/app.css">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/js/foundation.js"></script>
  <script src="/js/foundation.magellan.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="/js/app.js"></script>

  <title></title>
</head>
<body ng-app="crockPotMarket">
  <div ng-controller="PotCtrl">
    <div class="wide-row">
      <div class="large-3 small-12 columns header fixed">
        <div class="row">
          <div class="large-12 columns">
            <h1 class="header-text">Crock Pot Market</h1>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <h1 class="list-header-text">Brands</h1>
            <ul>
              <li class="list-text" ng-click="getAllProducts()"><a>All</a></li>
              <li class="list-text" ng-click="selectByBrand('Crock-Pot')"><a>Crock-Pot</a></li>
              <li class="list-text" ng-click="selectByBrand('Hamilton Beach')">Hamilton Beach</li>
              <li class="list-text" ng-click="selectByBrand('Breville')">Breville</li>
              <li class="list-text" ng-click="selectByBrand('Cuisinart')">Cuisinart</li>
              <li class="list-text" ng-click="selectByBrand('Other')">Other</li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <h1 class="list-header-text">Sizes (Quarts)</h1>
            <ul>
              <li class="list-text" ng-click="selectByCapacity('large')">7+</li>
              <li class="list-text" ng-click="selectByCapacity('medium')">5-6</li>
              <li class="list-text" ng-click="selectByCapacity('small')">Less than 4</li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <h1 class="list-header-text">Sort By:</h1>
            <ul>
              <li class="list-text">Brand</li>
              <li ng-click"console.log('poop')" class="list-text">Size</li>
              <li class="list-text"><a ng-click="sortProduct('price')">Price</a></li>
              <li class="list-text">Rating</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="large-9 small-12 columns page-content">
      <%= yield %>
      </div>
    </div>
  </div>
  <script>$(document).foundation();</script>
</body>
</html>